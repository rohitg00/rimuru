# Rimuru Configuration
# Copy this file to .env and modify as needed

# ============================================================================
# DATABASE CONFIGURATION (Required)
# ============================================================================

# PostgreSQL connection URL
# Format: postgres://[user[:password]@]host[:port]/database[?options]
DATABASE_URL=postgres://localhost/rimuru_dev

# Alternative environment variable name (if DATABASE_URL is used by another app)
# RIMURU_DATABASE_URL=postgres://localhost/rimuru_dev

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: trace, debug, info, warn, error
# Default: info
RIMURU_LOG_LEVEL=info

# Alternative: standard Rust log level (lower priority than RIMURU_LOG_LEVEL)
# RUST_LOG=rimuru=debug,sqlx=warn

# ============================================================================
# METRICS CONFIGURATION
# ============================================================================

# Interval in seconds between metric snapshots
# Default: 5
RIMURU_METRICS_INTERVAL=5

# Enable/disable metric storage to database
# Default: true
RIMURU_METRICS_STORE_TO_DB=true

# Metrics retention period in days (for cleanup)
# Default: 30
RIMURU_METRICS_RETENTION_DAYS=30

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================

# Default timeout in seconds for agent connections
# Default: 30
RIMURU_AGENT_TIMEOUT=30

# Auto-discover running agents on startup
# Default: true
RIMURU_AGENT_AUTO_DISCOVER=true

# ============================================================================
# API SYNC CONFIGURATION
# ============================================================================

# Enable automatic model pricing sync
# Default: true
RIMURU_SYNC_ENABLED=true

# Sync interval in hours (default: 6 for fresh pricing data)
# Default: 6
RIMURU_SYNC_INTERVAL_HOURS=6

# ============================================================================
# API KEYS FOR MODEL SYNC (Optional)
# These enable fetching model lists from official APIs
# Without these, Rimuru uses known model lists with current pricing
# ============================================================================

# Anthropic API Key (for Claude models)
# Get from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API Key (for GPT and o1/o3 models)
# Get from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-...

# Google AI API Key (for Gemini models)
# Get from: https://aistudio.google.com/apikey
# Alternative: GEMINI_API_KEY
# GOOGLE_API_KEY=...

# OpenRouter API Key (community pricing aggregator)
# Get from: https://openrouter.ai/keys
# OPENROUTER_API_KEY=sk-or-...

# ============================================================================
# DISPLAY CONFIGURATION
# ============================================================================

# Enable colored terminal output
# Default: true
RIMURU_COLOR=true

# Date/time format for display
# Default: %Y-%m-%d %H:%M:%S
RIMURU_DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

# Currency format for cost display
# Default: USD
RIMURU_CURRENCY=USD
